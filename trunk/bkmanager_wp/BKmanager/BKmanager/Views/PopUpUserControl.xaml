<UserControl x:Class="BKmanager.Views.PopUpUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}">

    <StackPanel x:Name="LayoutRoot" Width="200" Height="250" Margin="150,0,0,100" Background="DarkCyan">
        <TextBlock Text="Nhập MSSV" Margin="20,0,0,0" FontSize="25"/>
        <TextBox x:Name="tbx"/>
        <Button x:Name="btnOK" Content="Thêm"/>
        <Button x:Name="btnCancel" Content="Thoát"/>
    </StackPanel>
</UserControl>