<?xml version="1.0" encoding="utf-8"?>
<org.holoeverywhere.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="15dp" >

    <org.holoeverywhere.widget.TextView
        android:id="@+id/txt_tenmon"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="50"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <org.holoeverywhere.widget.LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="50"
        android:orientation="horizontal" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/headerLT_ngay"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Ngày thi" />

        <org.holoeverywhere.widget.TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#A4A4A4" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/headerLT_tiet"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tiết bắt đầu" />

        <org.holoeverywhere.widget.TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#A4A4A4" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/headerLT_phong"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Phòng" />
    </org.holoeverywhere.widget.LinearLayout>

    <org.holoeverywhere.widget.TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#A4A4A4" />

    <org.holoeverywhere.widget.LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="50"
        android:orientation="horizontal" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/txt_ngay_gk"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <org.holoeverywhere.widget.TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#A4A4A4" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/txt_tiet_gk"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <org.holoeverywhere.widget.TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#A4A4A4" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/txt_phong_gk"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />
    </org.holoeverywhere.widget.LinearLayout>

    <org.holoeverywhere.widget.TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#A4A4A4" />

    <org.holoeverywhere.widget.LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="50"
        android:orientation="horizontal" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/txt_ngay_ck"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <org.holoeverywhere.widget.TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#A4A4A4" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/txt_tiet_ck"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <org.holoeverywhere.widget.TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#A4A4A4" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/txt_phong_ck"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />
    </org.holoeverywhere.widget.LinearLayout>

    <org.holoeverywhere.widget.TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#A4A4A4" />

</org.holoeverywhere.widget.LinearLayout>