<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#40C0CB"
                android:centerColor="#37B0B9"
                android:endColor="#40C0CB"
                android:angle="45" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#40C0CB"
                android:centerColor="#37B0B9"
                android:endColor="#40C0CB"
                android:angle="45" />
        </shape>
    </item>

    <item android:state_pressed="false"
        android:state_focused="false"
        android:drawable="@drawable/thoikhoabieu">
    </item>
</selector>